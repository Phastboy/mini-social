# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build social`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t social`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system social && \
          adduser --system -G social social

COPY dist/apps/social social/
RUN chown -R social:social .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix social --omit=dev -f install

CMD [ "node", "social" ]
